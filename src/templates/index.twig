{% extends '@layouts::base.twig' %}

{#
 # this a navigation template
 # navigate to any other template from here
 #}

{% block header %}{% endblock %}
{% block footer %}{% endblock %}

{# content - start #}
{% block content %}
  <mj-section padding="30px">
    <mj-column>
      <mj-text>
        <div style="background: #f5f5f5; border-radius: 8px; padding: 20px;">
          <h1 style="font-size: 20px; color: #242424; border-bottom: 1px solid #e3e3e3; padding-bottom: 10px; margin: 0 0 10px;">
            Templates
          </h1>

          {% for template in templates %}
            {% if template != 'index' %}
              <div>
                <a
                  href="/{{ template }}"
                  style="display: inline-block; font-size: 18px; padding: 5px;"
                >
                  {{ template }}
                </a>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </mj-text>
    </mj-column>
  </mj-section>
{% endblock %}
{# content - end #}